<Application x:Class="Library.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Library.UI"
             xmlns:viewmodels ="clr-namespace:Library.Logic.ViewModels;assembly=Library.Logic"
             xmlns:views="clr-namespace:Library.UI.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:UserListViewModel}">
            <views:UserListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:BookCatalogViewModel}">
            <views:BookCatalogView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:EventListViewModel}">
            <views:EventListView/>
        </DataTemplate>
    </Application.Resources>
</Application>