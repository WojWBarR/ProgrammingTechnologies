<UserControl x:Class="Library.UI.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UI.Views"
             xmlns:viewModel ="clr-namespace:Library.Logic.ViewModels;assembly=Library.Logic"
             xmlns:data="clr-namespace:Library.Data.Models;assembly=Library.Data"
             xmlns:v="clr-namespace:Library.UI.Views"
             xmlns:data1="clr-namespace:Library.Data;assembly=Library.Data"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="800">

    <UserControl.Resources>
        <DataTemplate x:Key="UserTemplate">
            <StackPanel Orientation = "Horizontal">
                <TextBlock Text = "{Binding Path = FullName, Mode = OneWay}" Margin = "4 5 3 5"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.ColumnSpan="3" Content="List of Users:" FontSize="18" FontWeight="Bold"/>
            <ListBox x:Name="UserListBox" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row ="1" ItemsSource = "{Binding Users}" ItemTemplate="{StaticResource UserTemplate}" SelectedItem = "{Binding SelectedUser}"/>

            <TextBlock Margin="10 0 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.Id, StringFormat=Id: {0}}"/>
            <TextBlock Margin="10 20 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.Name, StringFormat= Name: {0}}"/>
            <TextBlock Margin="10 40 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.Surname, StringFormat=Surname: {0}}"/>
            <TextBlock Margin="10 60 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.AmountOfBooksRented, StringFormat=Books Rented: {0}}"/>

            <ContentControl Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="3" Content="{Binding SelectedViewModel}"/>

            <Button Grid.Row="2"  Height="30" Width ="100" Content="Refresh Data" Margin="4 10 0 0" HorizontalAlignment="Left" Grid.Column="0" Command="{Binding LoadDataCommand}"/>
            <Button Grid.Row="2"  Height="30" Width ="100" Content="Add User" Margin="20 10 0 0" HorizontalAlignment="Left" Grid.Column="1" Command="{Binding UpdateViewCommand}" CommandParameter="Add"/>
            <Button Grid.Row="2" Height="30" Width ="100" Content="Edit User" Margin="148 10 0 0"  HorizontalAlignment="Left" Grid.Column="1" Command="{Binding UpdateViewCommand}" CommandParameter="Edit" />
            <Button Grid.Row="2" Height="30" Width ="100" Content="Delete User" Margin="20 10 0 0" HorizontalAlignment="Left" Grid.Column="2" Command="{Binding DeleteCommand}"/>
        </Grid>
    </StackPanel>
</UserControl>