<UserControl x:Class="Library.UI.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UI.Views"
             xmlns:data="clr-namespace:Library.Data.Models;assembly=Library.Data"
             xmlns:v="clr-namespace:Library.UI.Views"
             xmlns:data1="clr-namespace:Library.Data;assembly=Library.Data"
             xmlns:viewModels="clr-namespace:Library.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="450">

    <UserControl.Resources>
        <viewModels:UserListViewModel x:Key="UserListViewModel"/>
    </UserControl.Resources>

    <StackPanel DataContext="{StaticResource UserListViewModel}" Orientation="Vertical" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.ColumnSpan="3" Content="List of Users:" FontSize="18" FontWeight="Bold"/>
            <ListBox Margin = "4 5 3 5" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row ="1" x:Name="UserListBox" ItemsSource = "{Binding Path=Users, Mode=OneWay}" SelectedItem = "{Binding SelectedUser, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Label Content="{Binding Path=FullName, Mode=OneWay}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Margin="10 0 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.Id, StringFormat=Id: {0}}"/>
            <TextBlock Margin="10 20 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.Name, StringFormat= Name: {0}}"/>
            <TextBlock Margin="10 40 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.Surname, StringFormat=Surname: {0}}"/>
            <TextBlock Margin="10 60 0 0" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=UserListBox, Path=SelectedItem.AmountOfBooksRented, StringFormat=Books Rented: {0}}"/>

            <Button Grid.Row="2"  Height="30" Width ="100" Content="Add User" Margin="10 10 0 0" HorizontalAlignment="Left" Grid.Column="1" Command="{Binding AddCommand}" CommandParameter="AddUser"/>
            <Button Grid.Row="2" Height="30" Width ="100" Content="Edit User" Margin="138 10 0 0"  HorizontalAlignment="Left" Grid.Column="1" Command="{Binding EditCommand}" CommandParameter="EditUser" />
            <Button Grid.Row="2" Height="30" Width ="100" Content="Delete User" Margin="10 10 0 0" HorizontalAlignment="Left" Grid.Column="2" Command="{Binding DeleteCommand}"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "Auto" />
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment = "Left"  VerticalAlignment = "Top">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "Auto" />
                    <ColumnDefinition Width = "Auto" />
                    <ColumnDefinition Width = "Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height = "Auto" />
                    <RowDefinition Height = "Auto" />
                    <RowDefinition Height = "Auto" />
                    <RowDefinition Height = "Auto" />
                </Grid.RowDefinitions>

                <Label Grid.ColumnSpan="2" Content="Manage User:" FontSize="32" FontWeight="Bold"/>

                <Label Content = "Name:" Grid.Column = "0" HorizontalAlignment = "Left" Margin = "3" Grid.Row = "1" VerticalAlignment = "Center" />

                <TextBlock Grid.Column="1" Margin="0 7 0 0" Grid.Row="1" Text="{Binding Path=SelectedUser.Name, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Grid.Column = "2" HorizontalAlignment = "Left" Height = "23" Margin = "3" Grid.Row = "1" 
                Text = "{Binding Path=Name, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding ErrorCollection[Name]}" VerticalAlignment = "Center" Width = "120" />

                <Label Content = "Surname:" Grid.Column = "0" HorizontalAlignment = "Left" Margin = "3" Grid.Row = "2" VerticalAlignment = "Center" />

                <TextBlock Grid.Column="1" Margin="0 7 0 0" Grid.Row="2" Text="{Binding Path=SelectedUser.Surname, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Grid.Column = "2" HorizontalAlignment = "Left" Height = "23" Margin = "3" Grid.Row = "2" 
                         Text = "{Binding Path=Surname, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding ErrorCollection[Surname]}" VerticalAlignment = "Center" Width = "120" />

                <Label Content = "Books rented:" Grid.Column = "0" HorizontalAlignment = "Left" Margin = "3" Grid.Row = "3" VerticalAlignment = "Center" />

                <TextBlock Grid.Column="1" Margin="0 7 0 0" Grid.Row="3" Text="{Binding Path=SelectedUser.AmountOfBooksRented, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Grid.Column = "2" HorizontalAlignment = "Left" Height = "23" Margin = "3" Grid.Row = "3" 
                         Text = "{Binding Path=AmountOfBooksRented, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment = "Center" Width = "120" />

            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
