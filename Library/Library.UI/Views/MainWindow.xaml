<Window x:Class="Library.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentControl Content="{Binding SelectedViewModel}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">

            <Button  Margin="10" FontSize="17" Width="120" Command="{Binding UpdateViewCommand}" CommandParameter="Users">
                Manage Users
            </Button>
            <Button Margin="10" FontSize="17" Width="140" Command="{Binding UpdateViewCommand}" CommandParameter="Events">
                Manage Rentals
            </Button>
            <Button Margin="10" FontSize="17" Width="120" Command="{Binding UpdateViewCommand}" CommandParameter="Books">
                Manage Books
            </Button>
        </StackPanel>
    </Grid>
</Window>